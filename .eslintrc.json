{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["e2e/","specs/", "codecept.conf.js","src/public"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-console": "off",
        "linebreak-style": 0,
        "import/prefer-default-export": "off",
        "no-underscore-dangle": "off",
        "import/no-extraneous-dependencies": "error",
        "no-restricted-globals": ["error", "event", "fdescribe"],
        "object-curly-newline": ["error", {"multiline": true}]
    }
}
